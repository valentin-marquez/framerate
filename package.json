{
  "name": "framerate",
  "private": true,
  "packageManager": "^bun@1.2.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "biome": "biome check --write .",
    "biome:check": "biome check .",
    "biome:format": "biome format --write .",
    "biome:format:check": "biome format .",
    "biome:lint": "biome lint --write .",
    "biome:lint:check": "biome lint .",
    "check-types": "turbo run check-types --skipLibCheck",
    "db:push": "turbo run db:push",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=api",
    "dev:collector": "turbo run dev --filter=collector",
    "dev:tracker": "turbo run dev --filter=tracker",
    "dev:web": "turbo run dev --filter=web",
    "generate:types": "turbo run generate:types",
    "prepare": "command -v simple-git-hooks >/dev/null 2>&1 && simple-git-hooks",
    "test": "turbo run test",
    "lint": "turbo run biome:lint"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.6.1",
    "typescript": "^5.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run biome && bun run generate:types",
    "pre-push": "bun run biome:check && bun run build"
  }
}
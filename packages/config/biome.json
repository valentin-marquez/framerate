{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "root": false,
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.{ts,tsx,js,jsx,json,md,css,html}"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "on"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
